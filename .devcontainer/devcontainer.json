{
    "name": "NovaEco Core",
    "dockerComposeFile": "docker-compose.yml",
    // This is the service VS Code will 'attach' to.
    // The other services (api, auth) will still be running.
    "service": "app",
    // Mount the entire monorepo root into /workspace
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    // Forward all ports for all running services
    "forwardPorts": [
        3000,
        5000,
        8000,
        9000
    ],
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/appuser/.local/bin"
    },
    // Install App requirements AND the NovaEco CLI from the devtools repo
    "postCreateCommand": "cd /workspace/app && pip install -r requirements-dev.txt && pip install 'git+https://github.com/novaeco-tech/novaeco-devtools.git@main#subdirectory=novaeco-cli'"
}