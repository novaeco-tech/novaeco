{
    "name": "NovaEco Core",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "dbaeumer.vscode-eslint",
                "tamasfe.even-better-toml",
                "zxh404.vscode-proto3",
                "ms-playwright.playwright"
            ],
            // Help Pylance find your code in the monorepo
            "settings": {
                "python.analysis.extraPaths": [
                    "/workspace/novaeco/app/src"
                ]
            }
        }
    },
    "forwardPorts": [
        3000,
        5000,
        8000,
        9000
    ],
        "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/appuser/.local/bin"
    },
    
    // Feature block is good to keep for general utility (sudo, zsh)
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installSudo": true,
            "username": "appuser",
            "configureZshAsDefaultShell": true
        }
    },
    
    // 1. Install CLI
    // 2. Install Dev Deps (e.g. black, isort, mypy, flake8)
    // 3. Install Test Deps (e.g. e2e, integration, performance)
    "postCreateCommand": "pip install 'git+https://github.com/novaeco-tech/novaeco-devtools.git@main#subdirectory=novaeco-cli' && pip install -r app/requirements-dev.txt && pip install -r tests/requirements.txt"
}